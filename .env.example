# AI-Genesis Environment Configuration
# Copy this file to .env and adjust values as needed
# All settings are prefixed with GENESIS_

# ============================================
# CORE SIMULATION PARAMETERS
# ============================================
GENESIS_TICK_RATE_MS=16
GENESIS_MAX_ENTITIES=500
GENESIS_MIN_POPULATION=20
GENESIS_WORLD_WIDTH=2000
GENESIS_WORLD_HEIGHT=2000

# ============================================
# REDIS CONNECTION
# ============================================
GENESIS_REDIS_URL=redis://redis:6379/0

# ============================================
# POSTGRESQL CONNECTION (persistent state)
# ============================================
GENESIS_POSTGRES_URL=postgresql://genesis:genesis@postgres:5432/genesis

# ============================================
# OLLAMA LLM SERVICE
# ============================================
GENESIS_OLLAMA_URL=http://ollama:11434
GENESIS_OLLAMA_MODEL=llama3:8b
GENESIS_LLM_TIMEOUT_SEC=30

# ============================================
# SANDBOX SAFETY LIMITS
# ============================================
GENESIS_MUTATIONS_DIR=./mutations
GENESIS_TRAIT_TIMEOUT_SEC=0.005
GENESIS_TICK_TIME_BUDGET_SEC=0.014
GENESIS_MAX_ACTIVE_TRAITS=30
GENESIS_MAX_TRAIT_VERSIONS_KEPT=3
GENESIS_ALLOWED_IMPORTS=math,random,dataclasses,typing,enum,collections,functools,itertools

# ============================================
# PROCESS MANAGEMENT
# ============================================
GENESIS_SOFT_RESTART_INTERVAL_HOURS=24
GENESIS_SOFT_RESTART_MUTATION_THRESHOLD=1000

# ============================================
# WATCHER AGENT
# ============================================
GENESIS_SNAPSHOT_INTERVAL_TICKS=300
GENESIS_WATCHER_HISTORY_DEPTH=5
GENESIS_ANOMALY_DEATH_THRESHOLD=0.30
GENESIS_ANOMALY_OVERPOP_THRESHOLD=2.0

# ============================================
# EVOLUTION CYCLE
# ============================================
GENESIS_EVOLUTION_COOLDOWN_SEC=60
